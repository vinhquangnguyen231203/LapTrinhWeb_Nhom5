        <!-- Edit Modal HTML -->
        <div id="addEmployeeModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="reader/crearReader" method="post">
                        <div class="modal-header">						
                            <h4 class="modal-title">Thêm độc giả</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">					
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input type="text" name="fullName" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>CMND</label>
                                <input type="number" name="CMND" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Loại độc giả</label>
                                <select name="category" class="form-select" aria-label="Default select example">
                                        <option value="Sinh viên">Sinh Viên </option>
                                        <option value="Giảng viên">Giảng Viên</option>
                                </select>
                            </div>				
                        </div>
                        <div class="modal-footer">
                            <input type="button" class="btn btn-default" data-dismiss="modal" value="Huỷ">
                            <input type="submit" class="btn btn-info" value="Thêm">
                        </div>
                    </form>
                </div>
            </div>
        </div> 
        <script>
            // Sử dụng jQuery để lắng nghe sự kiện khi nút chỉnh sửa được click
        $('.edit').on('click', function() {
            
            var fullName = $(this).data('fullName');
            var CMND = $(this).data('CMND');
            var category = $(this).data('category');
            
            $('#editEmployeeModal').find('#fullName').val(fullName);
            $('#editEmployeeModal').find('#category').val(category);
            $('#editEmployeeModal').find('#CMND').val(CMND);
        });
        </script>
        <div id="editEmployeeModal" class="modal fade">
